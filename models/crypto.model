from mergexp import *
# create a topology named 'portscanner'
net = Network('crypto', addressing==ipv4, routing==static)
nodes = [net.node(name, image == 'bullseye-edu') for name in [ 'compromised' ]]

fusioncore = net.node('fusioncore', image == 'bullseye-edu', proc.cores>=4,memory.capacity>=gb(8))

for node in nodes:
	net.connect([fusioncore, node])

experiment(net)

