[Unit]
Description=postgres run script
Wants=network-online.target
After=network-online.target

[Service]
Restart=always
RestartSec=1s

ExecStart=/usr/bin/python3 -m honeypots --setup postgres:5432

TimeoutStartSec=300
TimeoutStopSec=60

[Install]
WantedBy=multi-user.target
